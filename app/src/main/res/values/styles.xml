<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Locksmith" parent="Theme.Locksmith.Base" />

    <style name="Theme.Locksmith.Light" parent="Theme.Locksmith.Base.Light" />

    <style name="Theme.Locksmith.Black" parent="Theme.Locksmith.Base.Black" />

    <style name="Theme.Locksmith.FollowSystem" parent="Theme.Locksmith.Base.Adaptive">
        <item name="android:windowBackground">?colorSurface</item>
    </style>

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog" />


    <style name="MaterialButtonTheme" parent="Widget.Material3.Button">
        <item name="cornerRadius">6dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">@style/TextViewNormal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
    </style>

    <style name="MaterialPopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>


    <style name="TextViewOverline" parent="TextAppearance.MaterialComponents.Overline">
    </style>

    <style name="TextViewSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>

    <style name="TextViewNormal" parent="">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
    </style>

    <style name="TextViewHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
    </style>

    <style name="TextViewHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
    </style>



    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="popupTheme">?toolbarPopupTheme</item>
        <item name="android:transitionName" tools:ignore="NewApi">toolbar</item>
        <item name="layout_collapseMode">pin</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="titleMarginStart">16dp</item>
    </style>


    <style name="ToolbarTextAppearanceNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CenteredCheckBoxTheme">
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="NoUnderlineTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@android:color/transparent</item> <!-- 移除边框颜色 -->
        <item name="boxStrokeWidth">0dp</item> <!-- 边框宽度设为0 -->
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/md_deep_purple_A200</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Medium
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Medium" parent="">
        <item name="cornerSizeBottomLeft">@dimen/edittext_radius</item>
        <item name="cornerSizeBottomRight">@dimen/edittext_radius</item>
    </style>

    <style name="NoUnderlineTextInput.Top" parent="NoUnderlineTextInput">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Top
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Top" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="NoUnderlineTextInput.Middle" parent="NoUnderlineTextInput">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Middle
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Middle" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="NoUnderlineTextInput.Bottom" parent="NoUnderlineTextInput">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Bottom
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox.Bottom" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="LockUi">
        <!--Common styles properties-->
    </style>

    <style name="LockUi.ItemListView" parent="LockUi">
        <item name="lockUiItemHeight">@dimen/lock_ui_item_list_item_height</item>
        <item name="lockUiItemSeparatorDrawable">@drawable/lock_ui_divider</item>

        <item name="lockUiItemCopyIcon">@drawable/lock_ui_ic_copy</item>
        <item name="lockUiItemDeleteIcon">@drawable/lock_ui_ic_delete</item>
        <item name="lockUiItemCopyEnabled">true</item>
        <item name="lockUiItemDeleteEnabled">true</item>
        <item name="lockUiSwipeEnabled">true</item>
        <item name="lockUiBackgroundLayoutColor">@color/lock_ui_white_smoke</item>

        <item name="lockUiItemMarginStart">@dimen/lock_ui_item_list_item_margin_start</item>
        <item name="lockUiItemMarginEnd">@dimen/lock_ui_item_list_item_margin_end</item>
        <item name="lockUiItemTitleMarginStart">@dimen/lock_ui_item_list_item_title_margin_start</item>
        <item name="lockUiItemVerticalSpacerHeight">@dimen/lock_ui_item_list_item_vertical_spacer_height</item>
        <item name="lockUiItemVerticalSpacerPosition">@dimen/lock_ui_item_list_item_vertical_spacer_position</item>
        <item name="lockUiItemTitleTextSize">@dimen/lock_ui_item_item_title</item>
        <item name="lockUiItemTitleTextColor">?android:attr/textColorSecondary</item>
        <item name="lockUiItemTitleTextStyle">bold</item>

        <item name="lockUiAccountNameTextSize">@dimen/lock_ui_item_item_accountname</item>
        <item name="lockUiAccountNameTextColor">@color/grey</item>
        <item name="lockUiAccountNameTextStyle">normal</item>

        <item name="lockUiUpdateDateTextSize">@dimen/lock_ui_item_item_update_date</item>
        <item name="lockUiUpdateDateTextColor">@color/grey</item>
        <item name="lockUiUpdateDateTextStyle">normal</item>

        <item name="lockUiForegroundLayoutColor">@color/white</item>




        <item name="lockUiLoadingView">@layout/default_loading_view</item>
        <item name="lockUiLoadingMoreView">@layout/default_item_list_loading_more_view</item>
        <item name="lockUiEmptyStateView">@layout/empty_view</item>

    </style>

    <dimen name="lock_ui_item_item_title">15sp</dimen>
    <dimen name="lock_ui_item_item_accountname">13sp</dimen>
    <dimen name="lock_ui_item_item_update_date">13sp</dimen>
</resources>